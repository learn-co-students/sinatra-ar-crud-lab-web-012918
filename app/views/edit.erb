<form method="POST" action="/posts/<%= @post.id %>">
 <input id="hidden" type="hidden" name="_method" value="patch">
 <p>Name: <input id="name" type="text" name="name" value="<%= @post.name %>"></p>
 <p>Content: <input id="content" type="text" name="content" value="<%= @post.content %>"></p>
 <input id="submit" type="submit">
</form>
